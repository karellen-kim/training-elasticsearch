###
DELETE {{host}}/synonym_test

###
PUT {{host}}/synonym_test
Content-Type: application/json

{
  "settings": {
    "analysis": {
      "tokenizer": {
        "custom_tokenizer": {
          "type": "nori_tokenizer",
          "decompound_mode": "none",
          "user_dictionary": "user_dict.txt"
        }
      },
      "filter": {
        "nori_pos_filter": {
          "type": "nori_part_of_speech",
          "stoptags": ["E", "IC", "J", "MAG", "MM", "SP", "SSC", "SSO", "UNA", "VCP", "VCN", "VV", "VA", "VX"]
        },
        "synonyms_v1_filter": {
          "type": "synonym_graph",
          "synonyms_set": "my_synonym_set_v1",
          "updateable": true
        },
        "synonyms_v2_filter": {
          "type": "synonym_graph",
          "synonyms_set": "my_synonym_set_v2",
          "updateable": true
        }
      },
      "analyzer": {
        "index_analyzer": {
          "type": "custom",
          "tokenizer": "custom_tokenizer",
          "filter": ["lowercase", "nori_pos_filter"]
        },
        "search_v1_analyzer": {
          "type": "custom",
          "tokenizer": "custom_tokenizer",
          "filter": ["lowercase", "nori_pos_filter", "synonyms_v1_filter"]
        },
        "search_v2_analyzer": {
          "type": "custom",
          "tokenizer": "custom_tokenizer",
          "filter": ["lowercase", "nori_pos_filter", "synonyms_v2_filter"]
        }
      }
    }
  },
    "mappings" : {
    "properties" : {
      "name" : {
        "type" : "text",
        "analyzer" : "index_analyzer"
      }
    }
  }
}

