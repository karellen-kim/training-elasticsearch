### 동의어 사전 목록
GET {{host}}/_synonyms

### 동의어 사전 삭제
DELETE {{host}}/_synonyms/my_synonym_set_v1

### 동의어 사전 업데이트
PUT {{host}}/_synonyms/my_synonym_set_v1
Content-Type: application/json

{
  "synonyms_set": [
    {
      "id": "1",
      "synonyms": "삼성, samsung"
    },
    {
      "id": "2",
      "synonyms": "텔레비전, tv, 티비"
    },
    {
      "id": "3",
      "synonyms": "아이폰, iphone"
    }
  ]
}

